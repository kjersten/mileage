  <div class="row">
    <div class="span3">
      <h2>Log In</h2>
      <p id="notice"><%= notice %></p>
      <% if flash[:error] %>
        <div id="error_explanation">
          <h2><%= flash[:error] %></h2>
        </div>
      <% end %>
      <%= form_tag sessions_path do %>
        <%= field_set_tag do %>
          <%= text_field_tag :email, params[:email], :placeholder => "Email address", :class=> "input-block-level" %>
          <%= password_field_tag :password, nil, :placeholder => "Password", :class=> "input-block-level" %>
          <%= label_tag :remember_me, :class => "checkbox" do %>
            <%= check_box_tag :remember_me, 1, params[:remember_me] %>   Remember me
          <% end %>
          <%= submit_tag "Sign in", :class => "btn btn-primary" %>
        <% end %>
      <% end %>
      <br/>
      <p>
      <%= link_to "Forgot password?", new_password_reset_path %>
      </p>
      <p>Don't have an account?  <%= link_to "Register", register_path %></p>
    </div>
  </div>
